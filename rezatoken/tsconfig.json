{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "exclude": ["build/**/*", "dist/**/*"]
}
