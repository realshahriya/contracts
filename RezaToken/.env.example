# RezaToken Environment Configuration
# Copy this file to .env and fill in your values

# TON Center API Key (optional but recommended)
# Get your API key from https://toncenter.com
TONCENTER_API_KEY=your_api_key_here

# Network Configuration
NETWORK=testnet  # or mainnet

# Deployment Configuration
DEPLOYER_MNEMONIC=your_24_word_mnemonic_phrase_here

# Contract Configuration
INITIAL_TON_USD_RATE=2500000  # $2.50 per TON (rate * 1e6)
INITIAL_MINT_AMOUNT=1000      # Initial tokens to mint (in RTZ)

# Gas Configuration
DEPLOYMENT_GAS=0.2            # TON amount for deployment
MINT_GAS=0.1                  # TON amount for minting
OPERATION_GAS=0.05            # TON amount for operations

# Metadata Configuration
TOKEN_NAME=RezaToken
TOKEN_SYMBOL=RTZ
TOKEN_DESCRIPTION=RezaToken - A modern Jetton with sale approval mechanism
TOKEN_DECIMALS=18
TOKEN_IMAGE_URL=https://example.com/reza-token-logo.png

# Monitoring Configuration
ENABLE_MONITORING=true
WEBHOOK_URL=https://your-webhook-url.com/notifications

# Development Configuration
VERBOSE_LOGS=false
DEBUG_MODE=false